@model Customer

<div class="container">
	<h3>Chỉnh sửa thông tin khách hàng</h3>
	<form method="post" asp-action="Edit">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="CustomerName">Tên khách hàng</label>
			<input asp-for="CustomerName" type="text" class="form-control" />
			<span asp-validation-for="CustomerName" class="text-danger"></span>
		</div>

		<div class="from-group">
			<label asp-for="Address">Địa chỉ</label>
			<input asp-for="Address" type="date" class="form-control" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="PhoneNumber">Số điện thoại</label>
			<input asp-for="PhoneNumber" type="text" class="form-control" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Cập nhật</button>
		<a asp-action="Index" class=" btn btn-primary">Huy</a>
	</form>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}