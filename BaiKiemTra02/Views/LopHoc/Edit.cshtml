@model LopHoc

<div class="container">
    <h3>Chỉnh sửa</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <label asp-for="TenLopHoc">Ten</label>
            <input asp-for="TenLopHoc" type="text" class="form-control" />
            <span asp-validation-for="TenLopHoc" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="NamNhapHoc">Năn nhập học</label>
            <input asp-for="NamNhapHoc" type="date" class="form-control" />
            <span asp-validation-for="NamNhapHoc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NamRaTruong">Năn ra trường</label>
            <input asp-for="NamRaTruong" type="date" class="form-control" />
            <span asp-validation-for="NamRaTruong" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SoLuongSinhVien">Số lượng sinh viên</label>
            <input asp-for="SoLuongSinhVien" type="text" class="form-control" />
            <span asp-validation-for="SoLuongSinhVien" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>

    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
